<br />
<h4>Clientes</h4>
<hr />
<br />
<%= search_form_for @q do |f| %>

  <%= f.label "Número do Aluno:", :style => 'font-wieght:bold;' %>
  <%= f.search_field :registro_aluno_cont, :style => 'width:250px;' %>
  <%= f.submit "Buscar ", :class => 'btn btn-primary', :style => 'margin-left: 50px;' %>
  <%= link_to 'Incluir Novo', new_client_path, :class => 'btn btn-primary', :style => 'background: #2196F3; margin-left:40px;' %>
<% end %>

<br />


<br />
<table>
  <thead>
    <tr>
      <th>Nome (Pai do Aluno)</th>
      <th>Nome de Guerra Aluno</th>
      <th>Telefone</th>
      <th>Número do Aluno</th>
      <th>Email</th>

      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.student %></td>
        <td><%= client.phone %></td>
        <td><%= client.registro_aluno %></td>
        <td><%= client.email %></td>
        <td><%= link_to 'Editar', edit_client_path(client) %></td>
        <td><%= link_to 'Excluir', client, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr />
<p>Total: <%= @todos_clientes %></p>
<br />
<div style="margin-left:25%;">
<center><%= will_paginate @clients, renderer: BootstrapPagination::Rails, :previous_label => 'Anterior', :next_label => 'Próximo' %></center>
</div>
<br>


